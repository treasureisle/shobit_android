<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager_event"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/text_editors_pick"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:text="Editor's Pick"/>
                <Button
                    android:id="@+id/btn_more_editors_pick"
                    android:layout_width="67dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="more"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_editors_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp" />

                </FrameLayout>

            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@color/grey_300">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="66dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_gravity="center_vertical">
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_skirt"
                            android:background="@drawable/btn_store_skirt"
                            android:layout_width="102dp"
                            android:layout_height="46dp"
                            android:text="스커트    "
                            android:gravity="right|center_vertical"/>
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_heel"
                            android:background="@drawable/btn_store_heel"
                            android:layout_width="102dp"
                            android:layout_height="46dp"
                            android:text="구두    "
                            android:gravity="right|center_vertical" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_pants"
                            android:background="@drawable/btn_store_pants"
                            android:layout_width="102dp"
                            android:layout_height="46dp"
                            android:text="바지    "
                            android:gravity="right|center_vertical" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_dress"
                            android:background="@drawable/btn_store_dress"
                            android:layout_width="102dp"
                            android:layout_height="46dp"
                            android:text="드레스    "
                            android:gravity="right|center_vertical" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_knit"
                            android:background="@drawable/btn_store_knit"
                            android:layout_width="102dp"
                            android:layout_height="46dp"
                            android:text="니트    "
                            android:gravity="right|center_vertical" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_hat"
                            android:background="@drawable/btn_store_hat"
                            android:layout_width="102dp"
                            android:layout_height="46dp"
                            android:text="모자    "
                            android:gravity="right|center_vertical" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_bikini"
                            android:background="@drawable/btn_store_bikini"
                            android:layout_width="102dp"
                            android:layout_height="46dp"
                            android:text="수영복    "
                            android:gravity="right|center_vertical" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </FrameLayout>
            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/text_today_seller"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:text="Today Seller"/>
                <Button
                    android:id="@+id/btn_more_today_seller"
                    android:layout_width="67dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="more"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_today_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp" />

                </FrameLayout>

            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/text_hot1"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="Hot1"/>
                <Button
                    android:id="@+id/btn_more_hot1"
                    android:layout_width="67dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="more"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_hot1"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp" />

                </FrameLayout>

            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/text_hot2"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="Hot2"/>
                <Button
                    android:id="@+id/btn_more_hot2"
                    android:layout_width="67dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="more"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_hot2"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp" />

                </FrameLayout>

            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/text_hot3"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="Hot3"/>
                <Button
                    android:id="@+id/btn_more_hot3"
                    android:layout_width="67dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="more"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_hot3"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp" />

                </FrameLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>